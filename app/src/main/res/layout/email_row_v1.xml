<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="99dp">

            <TextView
                android:id="@+id/shortContentTextV1"
                android:layout_width="224dp"
                android:layout_height="53dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="9dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/shortContentTextV"
                android:layout_width="223dp"
                android:layout_height="22dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="7dp"
                android:text="placeholder za tagove"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fromTextv1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:text="from:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:text="date:"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="66dp"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="9dp"
                android:text="subject"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/subjectTextV1"
                android:layout_width="89dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_marginBottom="9dp"
                android:text="subject"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView7" />

            <TextView
                android:id="@+id/dateTextV1"
                android:layout_width="89dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:text="subject"
                app:layout_constraintBottom_toTopOf="@+id/subjectTextV1"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/fromTextv1" />

            <TextView
                android:id="@+id/fromTextv1"
                android:layout_width="89dp"
                android:layout_height="22dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="6dp"
                android:text="subject"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>